<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background (Unplayed Part) -->
    <item android:id="@android:id/background">
        <shape>
            <solid android:color="#FFFFFF" /> <!-- Set the color of the unplayed part to white -->
        </shape>
    </item>

    <!-- Track (Progressed Part) -->
    <item android:id="@android:id/progress">
        <clip>
            <layer-list>
                <item>
                    <shape>
                        <solid android:color="@color/white" /> <!-- Set the color of the played part to your desired color -->
                    </shape>
                </item>
            </layer-list>
        </clip>
    </item>
</layer-list>
